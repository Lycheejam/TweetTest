
@{
    ViewBag.Title = "Result";
}
@model IEnumerable<TweetTest.Models.TweetResult>
<h2>Result</h2>

<h3>一覧</h3>

<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>userid</th>
            <th>text</th>
            <th>tweetid</th>
            <th>operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.userId</td>
                <td>@item.tweet</td>
                <td>@item.tweetId</td>
                <td>
                    <a href="/Tweet/Reply/@item.id">返信</a>
                </td>
            </tr>
        }
    </tbody>

</table>