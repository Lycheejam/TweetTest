@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated) {
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-inline" })) {
        @Html.AntiForgeryToken()

        <a class="btn btn-primary" href="/Manage/Index" role="button">@User.Identity.GetUserName()</a>
        <a class="btn btn-primary" href="javascript:document.getElementById('logoutForm').submit()" role="button">ログオフ</a>
    }
} else {
    <a class="btn btn-primary" href="/Account/Register" role="button" id="registerLink">登録</a>
    <a class="btn btn-primary" href="/Account/Login" role="button" id="loginLink">ログイン</a>
}
