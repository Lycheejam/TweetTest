@model TweetTest.Models.TweetResult

@{
    ViewBag.Title = "Update";
}

<div class="row">
    <div class="col"></div>
    <div class="col">
        <div class="card border-primary">
            <div class="card-body">
                <h2 class="card-title">タスク更新</h2>
                @using (Html.BeginForm("Update", "MyTask", FormMethod.Post)) {
                    for (int i = 0; i < Model.myTasks.Count; i++) {
                        var str = "myTasks[" + i + "].state";
                        int numno = i + 1;
                        if (Model.myTasks[i].state == 0) {
                            <select name=@str>
                                <option value="0" selected></option>
                                <option value="1">○</option>
                                <option value="2">×</option>
                            </select>
                        } else if (Model.myTasks[i].state == 1) {
                            <select name=@str>
                                <option value="0"></option>
                                <option value="1" selected>○</option>
                                <option value="2">×</option>
                            </select>
                        } else if (Model.myTasks[i].state == 2) {
                            <select name=@str>
                                <option value="0"></option>
                                <option value="1">○</option>
                                <option value="2" selected>×</option>
                            </select>
                        }
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">No.@numno</div>
                                </div>
                                <input class="form-control rounded-right" type="text" name="myTasks[@i].myTask" value=@Model.myTasks[i].myTask readonly="readonly">
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="card-footer">
                <a class="btn btn-lg btn-block btn-primary" href="/MyTask/Index" role="button">戻る</a>
                <button type="submit" class="btn btn-lg btn-block btn-primary">Submit</button>
            </div>
        </div>
    </div>
    <div class="col"></div>
</div>
