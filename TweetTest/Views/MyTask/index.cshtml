
@{
    ViewBag.Title = "index";
}
@*@model TweetTest.Models.TweetResult*@
@model CoreTweet.Embed
<h1>Topページ</h1>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-lg-offset-2">
                @if (Model != null) {
                    <h2>最新タスク</h2>
                    <table>
                        <tr>
                            <td>
                                @Html.Raw(@Model.Html)
                            </td>
                        </tr>
                    </table>
                    <a class="btn-primary btn-lg" href="/MyTask/Regist" role="button">タスク登録</a>
                    <a class="btn-primary btn-lg" href="/MyTask/Update" role="button">タスク更新</a>
                } else {
                    <p>タスクはありません</p>
                    <a class="btn-primary btn-lg" href="/MyTask/Regist" role="button">タスク登録</a>
                }
            </div>
        </div>
    </div>
</body>
