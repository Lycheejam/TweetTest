@{
    ViewBag.Title = "Regist";
}

<h2>Regist</h2>

<body class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                @using (Html.BeginForm("Regist", "MyTask", FormMethod.Post)) {
                    for (int i = 0; i < 5; i++) {
                        <div class="form-group">
                            @Html.TextBox("myTasks[" + i + "].myTask"
                                          , null
                                          , new {
                                              @class = "form-control",
                                              type = "text"
                                          })
                        </div>
                    }
                    <button type="submit" class="btn btn-lg btn-block btn-primary">Submit</button>
                }
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>